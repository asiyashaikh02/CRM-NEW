
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isSignedIn() && getUser().role == role;
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || hasRole('SUPER_ADMIN') || (hasRole('SALES_ADMIN') && resource.data.adminId == request.auth.uid) || hasRole('OPS_ADMIN'));
      allow create: if isSignedIn();
      allow update: if hasRole('SUPER_ADMIN') || (isSignedIn() && request.auth.uid == userId);
    }

    match /leads/{leadId} {
      allow read: if hasRole('SUPER_ADMIN') || (hasRole('SALES_ADMIN') && resource.data.salesAdminId == request.auth.uid) || (hasRole('SALES_USER') && resource.data.createdBy == request.auth.uid);
      allow create: if hasRole('SALES_USER') || hasRole('SALES_ADMIN');
      allow update: if hasRole('SUPER_ADMIN') || (hasRole('SALES_USER') && resource.data.createdBy == request.auth.uid) || (hasRole('SALES_ADMIN') && resource.data.salesAdminId == request.auth.uid);
    }

    match /orders/{orderId} {
      allow read: if hasRole('SUPER_ADMIN') || hasRole('OPS_ADMIN') || (hasRole('OPS_USER') && resource.data.opsUserId == request.auth.uid) || (hasRole('SALES_USER') && resource.data.salesUserId == request.auth.uid);
      allow create: if hasRole('SUPER_ADMIN') || hasRole('SALES_ADMIN') || hasRole('OPS_ADMIN');
      allow update: if hasRole('SUPER_ADMIN') || hasRole('OPS_ADMIN') || (hasRole('OPS_USER') && resource.data.opsUserId == request.auth.uid);
    }

    match /payments/{paymentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
    }

    match /notifications/{notifId} {
      allow read, update: if isSignedIn() && resource.data.toUserId == request.auth.uid;
      allow create: if isSignedIn();
    }
  }
}
